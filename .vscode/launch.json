{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: 現在のファイル",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },

    {
      "name": "Python: FastAPI",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}/webapi",
      "module": "uvicorn",
      "args": ["api:app", "--reload"],
      "jinja": true,
      "justMyCode": true
    }
  ]
}
